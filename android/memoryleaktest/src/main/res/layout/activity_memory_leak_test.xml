<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memory_leak_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.memoryleaktest.MemoryLeakTest">

    <Button
        android:text="Box Test Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="15dp"
        android:id="@+id/box_button" />

    <Button
        android:text="Sphere Test Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sphere_button"
        android:layout_below="@+id/box_button"
        android:layout_alignStart="@+id/box_button" />

    <Button
        android:text="Video Test Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/video_button"
        android:layout_below="@+id/sphere_button"
        android:layout_alignStart="@+id/sphere_button" />

    <Button
        android:text="3d Object Test Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/object_button"
        android:layout_below="@+id/video_button"
        android:layout_alignStart="@+id/video_button" />

    <Button
        android:text="Scene BG Stereo Vid Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stereo_bg_button"
        android:layout_below="@+id/object_button"
        android:layout_alignStart="@+id/object_button" />

    <Button
        android:text="Particle Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/particle_button"
        android:layout_below="@+id/stereo_bg_button"
        android:layout_alignStart="@+id/stereo_bg_button"
        android:layout_marginTop="45dp" />

    <Button
        android:text="Light Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/light_button"
        android:layout_below="@+id/stereo_bg_button"
        android:layout_alignStart="@+id/stereo_bg_button" />

    <Button
        android:text="Event Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_button"
        android:layout_below="@+id/particle_button"
        android:layout_alignStart="@+id/particle_button" />

    <Button
        android:text="Audio Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_button"
        android:layout_below="@+id/event_button"
        android:layout_alignStart="@+id/event_button" />

    <Button
        android:text="Anim Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anim_button"
        android:layout_toEndOf="@+id/particle_button"
        android:layout_alignBottom="@+id/audio_button" />

    <Button
        android:text="Image Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_button"
        android:layout_below="@+id/particle_button"
        android:layout_alignStart="@+id/anim_button" />
</RelativeLayout>
